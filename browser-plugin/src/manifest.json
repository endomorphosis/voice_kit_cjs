{
  "manifest_version": 3,
  "name": "WebGPU Transformers.js Extension",
  "description": "WebGPU-powered ASR using Transformers.js",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "minimum_chrome_version": "113",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "DeepSeek Chat",
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "wasm/*",
        "asr-worker.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}