{
  "manifest_version": 3,
  "name": "Hallucinate Plugin",
  "description": "Hallucinate Plugin",
  "version": "0.0.3",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "unlimitedStorage"
  ],
  "optional_permissions": [
    "microphone"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "ort-wasm.wasm",
      "ort-wasm-simd.wasm",
      "ort-wasm-threaded.wasm",
      "ort-wasm-simd-threaded.wasm",
      "ort-wasm-simd-threaded.jsep.wasm",
      "ort.bundle.min.js",
      "asr-worker.js"
    ],
    "matches": ["<all_urls>"],
    "use_dynamic_url": true
  }],
  "minimum_chrome_version": "92",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Hallucinate Plugin",
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self' chrome-extension://*"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}